<% content_for :page_title, @post.title %>

<section class="section">
    <div class="container">

        <div class="content">
            <%= @post.content %>
        </div>

        <hr />
        
        <nav class="level">
            <div class = "level-left">
                <p class="level-item">
                    <%= link_to "Edit", edit_post_path(@post), class: "button" %>
                </p>
            </div>

            <div class = "level-right">
                <p class="level-item">
                    <%= button_to "Delete", post_path(@post), form: { data: { turbo_confirm: "are you sure?" } }, method: :delete, class: "button is-danger" %>				</p>
            </div>
        </nav>
    </div>
</section>


<section class="comments"></section>